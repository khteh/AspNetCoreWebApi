{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Grpc": "Debug",
            "System": "Debug",
            "Microsoft.AspNetCore": "Debug",
            "Microsoft.AspNetCore.Mvc.Internal.ControllerActionInvoker": "Error"
        },
        "Debug": {
            "LogLevel": {
                "Default": "Debug"
            }
        },
        "Console": {
            "IncludeScopes": true,
            "LogLevel": {
                "Microsoft.AspNetCore.Mvc.Razor.Internal": "Debug",
                "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
                "Microsoft.AspNetCore.Mvc.Razor": "Error",
                "Default": "Debug"
            }
        },
        "EventSource": {
            "LogLevel": {
                "Microsoft": "Debug"
            }
        },
        "EventLog": {
            "LogLevel": {
                "Microsoft": "Debug"
            }
        }
    },
    "GrpcConfig": {
        "Endpoint": "https://localhost:5001"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Exceptions",
            "Elastic.Serilog.Sinks",
            "Serilog.Enrichers.Thread",
            "Serilog.Enrichers.HttpContext"
        ],
        "MinimumLevel": "Information",
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            "WithExceptionDetails",
            "WithMemoryUsage",
            "WithMemoryUsageExact",
            "WithRequestBody",
            "WithRequestQuery",
            "WithClientIp",
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "User-Agent",
                    "propertyName": "UserAgent"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "X-Original-For",
                    "propertyName": "X_Original_For"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "X-Forwarded-Proto",
                    "propertyName": "X_Forwarded_Proto"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "X-Original-Proto",
                    "propertyName": "X_Original_Proto"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "X-Forwarded-Host",
                    "propertyName": "X_Forwarded_Host"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "X-Original-Host",
                    "propertyName": "X_Original_Host"
                }
            },
            {
                "Name": "WithRequestHeader",
                "Args": {
                    "headerName": "Content-Length",
                    "propertyName": "ContentLength"
                }
            }
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "Args": {
                        "outputTemplate": "{Timestamp} {Level} {EventId} {CorrelationId} {ClientIp} {Message:j} {Properties}{NewLine}{Exception}{NewLine}"
                    },
                    "Enrich": [
                        "FromLogContext",
                        "WithMachineName",
                        "WithThreadId",
                        "WithExceptionDetails",
                        "WithMemoryUsage",
                        "WithMemoryUsageExact",
                        "WithRequestBody",
                        "WithRequestQuery",
                        "WithClientIp",
                        "WithRequestHeader",
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Correlation-Id",
                                "propertyName": "CorrelationId"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "User-Agent",
                                "propertyName": "UserAgent"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Original-For",
                                "propertyName": "X_Original_For"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Forwarded-Proto",
                                "propertyName": "X_Forwarded_Proto"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Original-Proto",
                                "propertyName": "X_Original_Proto"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Forwarded-Host",
                                "propertyName": "X_Forwarded_Host"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "X-Original-Host",
                                "propertyName": "X_Original_Host"
                            }
                        },
                        {
                            "Name": "WithRequestHeader",
                            "Args": {
                                "headerName": "Content-Length",
                                "propertyName": "ContentLength"
                            }
                        }
                    ],
                    "path": "/var/log/aspnetcore/log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 3,
                    "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog, Version=0.0.0.0, Culture=neutral"
                }
            }
        ]
    }
}